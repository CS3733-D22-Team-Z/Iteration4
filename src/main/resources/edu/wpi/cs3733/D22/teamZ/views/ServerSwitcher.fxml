      </ImageView>
      <MFXButton fx:id="SwitchServerButton" buttonType="RAISED" layoutX="14.0" layoutY="235.0" onAction="#SwitchServerClicked" prefHeight="32.0" prefWidth="125.0" styleClass="landing-button" text="Switch Server">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </MFXButton>
      <Label fx:id="switchServerLabel" layoutX="18.0" layoutY="200.0" prefHeight="17.0" prefWidth="470.0" styleClass="object-body" text="Press the button to switch to a client server database" />
