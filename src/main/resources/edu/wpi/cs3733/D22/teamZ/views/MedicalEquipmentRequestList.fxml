<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/ServiceRequestDefault.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.D22.teamZ.controllers.MedicalEquipmentRequestListController">
    <children>
        <Label layoutX="48.0" layoutY="32.0" styleClass="object-header" text="List of Medical Equipment Requests">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
      <VBox alignment="CENTER" layoutX="411.0" layoutY="32.0" spacing="10.0">
         <children>
            <MFXButton fx:id="exportCSVButton" mnemonicParsing="false" onAction="#exportToCSV" text="Export to CSV..." />
              <MFXButton fx:id="refreshButton" onAction="#refreshClicked" prefHeight="29.0" prefWidth="73.0" text="Refresh" textFill="WHITE" />
              <Label styleClass="object-body" text="Filter &amp; Sort">
                  <font>
                      <Font name="System Bold" size="12.0" />
                  </font>
              </Label>
            <HBox alignment="CENTER" prefWidth="169.0">
               <children>
                      <MFXButton fx:id="idButton" onAction="#filterClicked" prefHeight="29.0" style="-fx-background-radius: 5 0 0 5;" styleClass="filter-button" text="ID" />
                      <MFXButton fx:id="deviceButton" onAction="#filterClicked" prefHeight="29.0" prefWidth="49.0" style="-fx-border-width: 0 1 0 1; -fx-border-color: #D2D2D2;" styleClass="filter-button" text="Device" />
                      <MFXButton fx:id="statusButton" onAction="#filterClicked" prefHeight="29.0" style="-fx-border-width: 0 1 0 0; -fx-border-color: #D2D2D2;" styleClass="filter-button" text="Status" />
                      <MFXButton fx:id="assigneeButton" onAction="#filterClicked" prefHeight="29.0" style="-fx-background-radius: 0 5 5 0;" styleClass="filter-button" text="Handler" />
               </children>
            </HBox>
              <ComboBox fx:id="filterCBox" onAction="#filterSet" prefHeight="25.0" prefWidth="175.0" promptText="Filter by..." />
              <Label styleClass="object-body" text="Details">
                  <font>
                      <Font name="System Bold" size="12.0" />
                  </font>
              </Label>
            <TableView fx:id="statusTable" prefHeight="150.0" prefWidth="175.0">
              <columns>
                <TableColumn fx:id="labelsColumn" editable="false" prefWidth="75.0" text="Field" />
                <TableColumn fx:id="detailsColumn" editable="false" prefWidth="75.0" text="Value" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
      <TableView fx:id="tableContainer" layoutX="14.0" layoutY="60.0" prefHeight="326.0" prefWidth="380.0">
         <columns>
            <TableColumn fx:id="idColumn" editable="false" prefWidth="100.0" text="ID" />
            <TableColumn fx:id="deviceColumn" editable="false" prefWidth="100.0" text="Device" />
            <TableColumn fx:id="assigneeColumn" editable="false" prefWidth="100.0" text="Handler" />
            <TableColumn fx:id="statusColumn" editable="false" prefWidth="100.0" text="Status" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
    </children>
</AnchorPane>
