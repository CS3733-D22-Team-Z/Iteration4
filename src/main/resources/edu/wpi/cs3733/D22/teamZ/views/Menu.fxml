<SplitPane dividerPositions="0.17" stylesheets="@../styles/MenuDefault.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.D22.teamZ.controllers.MenuController">
   <items>
      <Pane fx:id="menuPane" maxWidth="120.0" minWidth="150.0" styleClass="menu-container" stylesheets="@../styles/ServiceRequestDefault.css">
         <children>
            <VBox fx:id="iconContainer" alignment="TOP_CENTER" layoutX="24.0" layoutY="60.0" prefHeight="175.0" prefWidth="18.0" spacing="18.0">
               <children>
                  <Region styleClass="region-icon" />
                  <Region styleClass="region-icon" />
                  <Region styleClass="region-icon" />
                  <Region styleClass="region-icon" />
               </children>
            </VBox>
            <VBox fx:id="menuContainer" alignment="CENTER_LEFT" layoutX="50.0" layoutY="50.0" spacing="10.0">
               <children>
                  <MFXButton alignment="CENTER" onAction="#toHome" prefHeight="34.0" prefWidth="100.0" style="-fx-text-fill: #0075FF;" styleClass="menu-button" text="Home" textAlignment="CENTER" />
                  <MFXButton alignment="CENTER" onAction="#toLocations" prefHeight="25.0" prefWidth="100.0" style="-fx-text-fill: #C4C4C4;" styleClass="menu-button" text="Locations" textAlignment="CENTER" />
