                  <Region fx:id="exitGraphic" />
               </graphic>
            </MFXButton>
         </children>
      </Pane>
      <VBox>
         <children>
            <AnchorPane fx:id="contentPane" prefHeight="400.0" prefWidth="600.0" />
            <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="menu-container">
               <children>
                  <Label fx:id="timeLabel" text="4:20 AM" />
                  <Label fx:id="dateLabel" text="06/09/2022" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="5.0" right="10.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
