<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/ServiceRequestDefault.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.D22.teamZ.controllers.EquipmentPurchaseRequestController">
    <children>
        <MFXButton id="backButton" fx:id="backButton" layoutX="16.0" layoutY="14.0" onAction="#onBackButtonClicked" text="Back to Landing Page" />
        <Label layoutX="14.0" layoutY="63.0" prefHeight="26.0" prefWidth="352.0" styleClass="object-header" text="Medical Equipment Purchase Form" />
        <Label layoutX="17.0" layoutY="90.0" prefHeight="17.0" prefWidth="477.0" styleClass="object-body" text="Enter the fields below to purchase medical equipment." />
        <Label fx:id="equipmentTypeLabel" layoutX="14.0" layoutY="139.0" prefHeight="17.0" prefWidth="158.0" styleClass="form-header" text="Equipment Type" />
        <ChoiceBox fx:id="equipmentTypeChoiceBox" layoutX="12.0" layoutY="161.0" onKeyReleased="#validateButton" prefHeight="27.0" prefWidth="149.0" />
        <Label fx:id="paymentMethodLabel" layoutX="14.0" layoutY="215.0" prefHeight="17.0" prefWidth="158.0" styleClass="form-header" text="Payment Method" />
        <ChoiceBox fx:id="paymentMethodChoiceBox" layoutX="14.0" layoutY="235.0" onKeyReleased="#validateButton" onMouseExited="#validateButton" prefHeight="25.0" prefWidth="149.0" />
        <MFXButton fx:id="submitButton" layoutX="12.0" layoutY="334.0" onAction="#onSubmitButtonClicked" prefHeight="28.0" prefWidth="79.0" text="Submit" />
        <MFXButton fx:id="resetButton" layoutX="104.0" layoutY="334.0" onAction="#onResetButtonClicked" prefHeight="28.0" prefWidth="75.0" style="-fx-background-color: FF4343;" text="Reset" />
        <Label fx:id="currentRequestsLabel" layoutX="332.0" layoutY="309.0" prefHeight="17.0" prefWidth="158.0" styleClass="form-header" text="Current Requests" />
        <Label id="rejected" fx:id="errorSavingLabel" layoutX="18.0" layoutY="373.0" prefHeight="17.0" prefWidth="373.0" styleClass="form-header" text="Error saving request, no equipment available" />
        <Label id="confirmed" fx:id="successfulSubmitLabel" layoutX="22.0" layoutY="374.0" prefHeight="17.0" prefWidth="359.0" styleClass="form-header" text="Successfully submitted lab request!" />
        <MFXButton id="backButton" fx:id="equipmentPurchaseRequestListButton" layoutX="332.0" layoutY="330.0" onAction="#toEquipmentPurchaseRequestList" text="Equipment Purchase Request List" />
    </children>
</AnchorPane>
